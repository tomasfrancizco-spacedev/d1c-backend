{
  "apps": [
    {
      "name": "d1c-api",
      "script": "dist/src/main.js",
      "instances": "max",
      "exec_mode": "cluster",
      "env": {
        "NODE_ENV": "production",
        "PORT": 3000,
        "ENABLE_AUTOMATED_FEE_PROCESSING": "false"
      },
      "max_memory_restart": "512M",
      "min_uptime": "10s",
      "max_restarts": 3
    },
    {
      "name": "d1c-cron", 
      "script": "dist/src/main.js",
      "instances": 1,
      "exec_mode": "fork",
      "env": {
        "NODE_ENV": "production",
        "PORT": 3001,
        "ENABLE_AUTOMATED_FEE_PROCESSING": "true",
        "CRON_FEE_PROCESSING": "0 */30 * * * *"
      },
      "max_memory_restart": "256M",
      "cron_restart": "0 3 * * *",
      "min_uptime": "10s",
      "max_restarts": 5
    }
  ]
}